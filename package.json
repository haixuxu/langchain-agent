{
  "name": "langchain-agent-monorepo",
  "version": "1.0.0",
  "description": "A monorepo containing LangChain and Native agent implementations with MCP support",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev:langchain": "pnpm --filter langchain-agent dev",
    "dev:native": "pnpm --filter native-agent dev",
    "dev:react": "pnpm --filter react-agent dev",
    "build:langchain": "pnpm --filter langchain-agent build",
    "build:native": "pnpm --filter native-agent build",
    "build:react": "pnpm --filter react-agent build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint -- --fix",
    "typecheck": "pnpm -r typecheck"
  },
  "keywords": [
    "langchain",
    "mcp",
    "agent",
    "typescript",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0"
  }
}
